# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Configuration
# Default model - Claude Sonnet 4.5 with native PDF vision
MODEL_NAME=claude-sonnet-4.5
MODEL_TEMPERATURE=0.0
MODEL_MAX_TOKENS=16000

# Checkpoint Configuration
# Options: memory, sqlite, postgres
CHECKPOINT_BACKEND=sqlite
CHECKPOINT_DB_PATH=./checkpoints.db

# PostgreSQL Configuration (if using postgres backend)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=ifu_analysis
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password

# Analysis Configuration
ENABLE_HUMAN_REVIEW=true
SEVERITY_THRESHOLD=all  # all, major, critical

# Report Configuration
OUTPUT_DIR=./reports
INCLUDE_TOC=true
INCLUDE_SUMMARY=true
INCLUDE_STATISTICS=true

# Language Configuration
DOCUMENT_LANGUAGE=en

# Processing Options
MAX_PAGES_TO_COMPARE=100
PARALLEL_PAGE_PROCESSING=false

# Logging
LOG_LEVEL=INFO
